                app:layout_constraintTop_toBottomOf="@id/napovedanaSpickaText"/>

            <TextView
                android:id="@+id/kraljText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kralj zadnja runda:"
                android:textSize="20sp"
